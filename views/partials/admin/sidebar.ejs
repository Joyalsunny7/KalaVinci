<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Sidebar</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <link rel="stylesheet" href="/css/partials/admin/sidebar.css" />
</head>

<body>

    <aside class="sidebar">

        <!-- Sidebar Header -->
        <div class="sidebar-header">
            <div class="admin-profile">
                <img src="/images/ICON.png" alt="Admin Logo" class="logo" />
                <span class="admin-text">Admin</span>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="sidebar-nav">
            <ul>

                <li
                    class="nav-item <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'active' : '' %>">
                    <a href="/admin/dashboard" class="nav-link">
                        <i class="fa-solid fa-gauge nav-icon"></i>
                        <span class="nav-text">Dashboard</span>
                    </a>
                </li>

                <li class="nav-item">
                    <i class="fa-solid fa-box nav-icon"></i>
                    <span>Products</span>
                </li>

                <li class="nav-item">
                    <i class="fa-solid fa-cart-shopping nav-icon"></i>
                    <span>Orders</span>
                </li>

                <li
                    class="nav-item <%= typeof activePage !== 'undefined' && activePage === 'customers' ? 'active' : '' %>">
                    <i class="fa-solid fa-users nav-icon"></i>
                    <span class="nav-text">Users</span>
                    </a>
                </li>


                <li class="nav-item">
                    <i class="fa-solid fa-chart-line nav-icon"></i>
                    <span>Reports</span>
                </li>

                <li class="nav-item">
                    <i class="fa-solid fa-ticket nav-icon"></i>
                    <span>Coupons</span>
                </li>

                <li class="nav-item">
                    <i class="fa-solid fa-layer-group nav-icon"></i>
                    <span>Categories</span>
                </li>

                <li class="nav-item">
                    <i class="fa-solid fa-image nav-icon"></i>
                    <span>Banner Management</span>
                </li>

                <li class="nav-item">
                    <i class="fa-solid fa-tags nav-icon"></i>
                    <span>Offer Management</span>
                </li>

                <li class="nav-item">
                    <i class="fa-solid fa-palette nav-icon"></i>
                    <span>Artist Management</span>
                </li>

                <a href="/logout" class="sidebar-link logout-link">
                    <i class="fa-solid fa-right-from-bracket sidebar-icon"></i>
                    <span class="sidebar-text">Logout</span>
                </a>


                <li class="nav-item">
                    <i class="fa-solid fa-gear nav-icon"></i>
                    <span>Settings</span>
                </li>

            </ul>
        </nav>

        <!-- Sidebar Footer -->
        <div class="sidebar-footer">
            <div class="nav-item">
                <i class="fa-solid fa-circle-plus nav-icon"></i>
                <span>Extras</span>
            </div>
        </div>

    </aside>

</body>

</html>