
    <link rel="stylesheet" href="/css/user/emailReset.css">




    <div class="card">
        <h2>Update Your Email</h2>
        <p class="description">
            Enter your new email address. Weâ€™ll verify it with an OTP.
        </p>

        <% if (typeof error !=='undefined' ) { %>
            <p style="color:red;">
                <%= error %>
            </p>
            <% } %>

                <!-- ðŸ”¥ FORM MUST POST -->
                <form action="/email-reset" method="POST">

                    <!-- Current email (display only) -->
                    <div class="form-group">
                        <label>Current Email</label>
                        <input type="email" value="<%= emailReset?.email || '' %>" disabled>
                    </div>

                    <!-- New email -->
                    <div class="form-group">
                        <label for="email">New Email Address</label>
                        <input type="email" id="email" name="email" placeholder="Enter new email address" required>
                    </div>

                    <!-- Submit -->
                    <button type="submit" class="btn-update">
                        Update Email
                    </button>

                </form>

                <div class="footer-link">
                    <a href="/profile">Cancel and return to profile</a>
                </div>
    </div>

