<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/admin/admin-login.css">
    <link rel="icon" type="image/png" href="/images/ICON.png">
    <title>Kala Vinci - Admin Login</title>
</head>

<body>

    <div class="login-wrapper">

        <div class="login-card">

            <!-- Brand Header -->
            <div class="brand-header">
                <div class="logo-container">
                    <img src="/images/ICON1.png" alt="Logo" class="logo-img" />
                </div>

                <h1 class="admin-title">Admin</h1>
                <span class="brand-name">Kala Vinci</span>
            </div>

            <!-- Login Form -->
            <form action="/admin" method="POST" class="login-form"id="adminLoginForm">


                <div class="form-group">
                    <label class="label-text" for="email">Email</label>
                    <input class="input-field" type="email" id="email" name="email">
                </div>

                <div class="form-group">
                    <label class="label-text" for="password">Password</label>
                    <input class="input-field" type="password" id="password" name="password">
                </div>

                <% if (typeof error !=='undefined' && error) { %>
                    <div class="error" id="adminLoginError">
                        <%= error %>
                    </div>
                    <% } %>



                        <button class="submit-btn" type="submit">
                            Login
                        </button>

            </form>

        </div>

    </div>

    <footer class="footer">
        Â© Kala Vinci Design Studio
    </footer>

</body>

</html>


<script>
  (function () {
    const errorBox = document.getElementById('adminLoginError');
    const form = document.getElementById('adminLoginForm');

    if (errorBox && !sessionStorage.getItem('adminLoginSubmitted')) {
      errorBox.style.display = 'none';
    }

    if (form) {
      form.addEventListener('submit', () => {
        sessionStorage.setItem('adminLoginSubmitted', 'true');
      });
    }


    window.addEventListener('pageshow', () => {
      sessionStorage.removeItem('adminLoginSubmitted');
    });
  })();
</script>

