<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Category Management</title>
    <style>
        /* Base Styles */
        :root {
            --bg-color: #f8f8f8;
            --header-border: #8a4fff; /* Purple border */
            --table-header: #a5a5a5;
            --green-toggle: #4cd964;
            --red-toggle: #ff3b30;
            --pink-button: #e8848a;
            --input-bg: #d9d9d9;
            --card-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--bg-color);
            margin: 0;
            padding: 0;
            color: #333;
        }

        /* Top Header / Breadcrumb */
        .admin-header {
            background-color: #ffffff;
            padding: 15px 50px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top: 5px solid var(--header-border);
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .breadcrumb {
            font-size: 14px;
            font-weight: 500;
        }

        .breadcrumb .fade { color: #999; }

        .logout-btn {
            cursor: pointer;
            opacity: 0.6;
        }

        /* Main Content Container */
        .container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 0 20px;
        }

        /* Table Styling */
        .table-wrapper {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 50px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead th {
            background-color: var(--table-header);
            color: white;
            padding: 15px;
            font-weight: 400;
            font-size: 14px;
        }

        tbody td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #eee;
            background: #fff;
            font-size: 14px;
        }

        /* iOS Style Switch */
        .switch {
            position: relative;
            display: inline-block;
            width: 44px;
            height: 22px;
        }

        .switch input { opacity: 0; width: 0; height: 0; }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0; left: 0; right: 0; bottom: 0;
            background-color: var(--red-toggle);
            transition: .4s;
            border-radius: 20px;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 16px; width: 16px;
            left: 3px; bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .slider { background-color: var(--green-toggle); }
        input:checked + .slider:before { transform: translateX(22px); }

        /* Action Buttons */
        .action-btns {
            display: flex;
            justify-content: center;
            gap: 8px;
        }

        .btn-icon {
            background: white;
            border: 1px solid #ddd;
            padding: 5px 8px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 12px;
        }

        .btn-delete { color: #ff3b30; }

        /* Add Category Card */
        .add-card {
            background: #ffffff;
            border-radius: 30px;
            padding: 40px;
            box-shadow: var(--card-shadow);
            max-width: 850px;
            margin: 0 auto;
        }

        .add-card h2 {
            margin-top: 0;
            font-size: 22px;
            margin-bottom: 30px;
        }

        .form-flex {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
        }

        .input-group {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .input-group label {
            font-weight: 600;
            font-size: 16px;
        }

        .input-group input[type="text"] {
            background-color: var(--input-bg);
            border: none;
            padding: 12px 20px;
            border-radius: 5px;
            width: 300px;
            outline: none;
        }

        .save-container {
            width: 100%;
            text-align: center;
            margin-top: 30px;
        }

        .save-btn {
            background-color: var(--pink-button);
            color: white;
            border: none;
            padding: 12px 60px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 12px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .save-btn:hover {
            background-color: #d9747a;
        }
    </style>
</head>
<body>

    <!-- Top Navigation Bar -->
    <div class="admin-header">
        <div class="breadcrumb">
            <span class="fade">Admin</span> &gt; Category
        </div>
        <div class="logout-btn">
            <!-- Simple SVG Icon for Logout -->
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4M16 17l5-5-5-5M21 12H9"/></svg>
        </div>
    </div>

    <div class="container">
        <!-- Dynamic Table Section -->
        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Category</th>
                        <th>List / Unlist</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (categories && categories.length > 0) { %>
                        <% categories.forEach((cat, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= cat.name %></td>
                                <td>
                                    <label class="switch">
                                        <input type="checkbox" <%= cat.isListed ? 'checked' : '' %> 
                                               onchange="handleToggle('<%= cat._id %>')">
                                        <span class="slider"></span>
                                    </label>
                                </td>
                                <td>
                                    <div class="action-btns">
                                        <button class="btn-icon" onclick="editCat('<%= cat._id %>')">üìù</button>
                                        <button class="btn-icon btn-delete" onclick="deleteCat('<%= cat._id %>')">üóëÔ∏è</button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4">No categories found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Add New Category Form -->
        <div class="add-card">
            <h2>Add New Category</h2>
            <form action="/admin/add-category" method="POST">
                <div class="form-flex">
                    <div class="input-group">
                        <label>Name:</label>
                        <input type="text" name="categoryName" placeholder="" required>
                    </div>

                    <div class="input-group">
                        <label>List / Unlist :</label>
                        <label class="switch">
                            <input type="checkbox" name="isListed" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>

                <div class="save-container">
                    <button type="submit" class="save-btn">SAVE</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Example script functions for interactivity
        function handleToggle(id) {
            console.log("Toggling status for category ID:", id);
            // You would use fetch() here to update the status in your database
        }

        function deleteCat(id) {
            if(confirm("Are you sure you want to delete this category?")) {
                window.location.href = `/admin/delete-category/${id}`;
            }
        }

        function editCat(id) {
            window.location.href = `/admin/edit-category/${id}`;
        }
    </script>
</body>
</html>